---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5" data-animate style="--reveal-order: 1;">{description}</p>
    <div
      class="h-80 w-64 flex-shrink-0 rotate-[5deg] bg-white/80 p-4 shadow-[0_30px_80px_-60px_rgba(255,255,255,0.6)] transition duration-500 md:rotate-[7deg]"
      data-animate
      style="--reveal-order: 2;"
    >
      <Image
        class="h-full w-full rounded-[22px] object-cover"
        src={image}
        width="260"
        height="260"
        alt={name}
      />
    </div>
  </div>
</Section>
