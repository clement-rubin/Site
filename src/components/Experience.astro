---
import Section from "./Section.astro";
import type { ExperienceProps } from "@types";

interface Props {
  experience: ExperienceProps[];
}

const { experience } = Astro.props;
---

<Section text="Experience" href="experience">
  {
    experience.map(({ company, position, startDate, endDate, summary }, index) => (
      <div
        class="experience-card mb-10 rounded-[28px] border border-white/5 bg-white/[0.02] p-6 shadow-[0_20px_60px_-40px_rgba(15,23,42,0.9)] backdrop-blur-md hover:border-primary/40 hover:bg-white/[0.04]"
        data-animate
        style={`--reveal-order: ${index + 1};`}
      >
        <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
          {company}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
            {position}
          </h4>
          <span class="pb-[2px] text-sm text-white/70">
            {startDate} â€” {endDate}
          </span>
        </div>
        {Array.isArray(summary) ? (
          <ul class="list-none space-y-3">
            {summary.map((log) => (
              <li class="relative pl-8 text-base text-neutral before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
                {log}
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-base text-neutral">{summary}</p>
        )}
      </div>
    ))
  }
</Section>

